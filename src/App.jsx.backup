import React, { useState, useEffect } from 'react';
import ReceiptGenerator from './ReceiptGenerator.jsx';
import { createClient } from '@supabase/supabase-js';
const [generatedReceipt, setGeneratedReceipt] = useState(null);
import { ShoppingCart, Plus, Minus, Trash2, Coffee, CheckCircle } from 'lucide-react';

// Initialize Supabase
const supabase = createClient(
  import.meta.env.VITE_SUPABASE_URL,
  import.meta.env.VITE_SUPABASE_ANON_KEY
);

export default function App() {
  const [view, setView] = useState('table-selection');
  const [tables, setTables] = useState([]);
  const [selectedTable, setSelectedTable] = useState(null);
  const [menuItems, setMenuItems] = useState([]);
  const [cart, setCart] = useState([]);
  const [loading, setLoading] = useState(true);

  // Load initial data
  useEffect(() => {
    loadTables();
    loadMenuItems();
  }, []);

  const loadTables = async () => {
    try {
      const { data, error } = await supabase
        .from('tables')
        .select('*')
        .order('table_number');
      
      if (error) throw error;
      setTables(data || []);
    } catch (error) {
      console.error('Error loading tables:', error);
      // Mock data for testing
      setTables([
        { id: 1, table_number: 1, capacity: 2, status: 'free' },
        { id: 2, table_number: 2, capacity: 2, status: 'free' },
        { id: 3, table_number: 3, capacity: 4, status: 'free' },
        { id: 4, table_number: 4, capacity: 4, status: 'free' },
        { id: 5, table_number: 5, capacity: 6, status: 'occupied' },
        { id: 6, table_number: 6, capacity: 2, status: 'free' },
        { id: 7, table_number: 7, capacity: 4, status: 'free' },
        { id: 8, table_number: 8, capacity: 8, status: 'free' },
      ]);
    } finally {
      setLoading(false);
    }
  };

  const loadMenuItems = async () => {
    try {
      const { data, error } = await supabase
        .from('menu_items')
        .select('*')
        .eq('available', true)
        .order('name');
      
      if (error) throw error;
      setMenuItems(data || []);
    } catch (error) {
      console.error('Error loading menu items:', error);
      // Mock data for testing
      setMenuItems([
        { id: 1, name: 'Espresso', description: 'Rich and bold espresso shot', price: 120.00, category: 'Coffee' },
        { id: 2, name: 'Cappuccino', description: 'Espresso with steamed milk and foam', price: 180.00, category: 'Coffee' },
        { id: 3, name: 'Latte', description: 'Smooth espresso with steamed milk', price: 200.00, category: 'Coffee' },
        { id: 4, name: 'Americano', description: 'Espresso with hot water', price: 150.00, category: 'Coffee' },
        { id: 5, name: 'Mocha', description: 'Chocolate espresso with milk', price: 220.00, category: 'Coffee' },
        { id: 6, name: 'Croissant', description: 'Buttery flaky croissant', price: 150.00, category: 'Pastry' },
        { id: 7, name: 'Chocolate Muffin', description: 'Rich chocolate muffin', price: 120.00, category: 'Pastry' },
      ]);
    }
  };

  const selectTable = (table) => {
    if (table.status === 'free') {
      setSelectedTable(table);
      setView('menu');
    }
  };

  const addToCart = (item) => {
    const existing = cart.find(i => i.id === item.id);
    if (existing) {
      setCart(cart.map(i => 
        i.id === item.id ? { ...i, quantity: i.quantity + 1 } : i
      ));
    } else {
      setCart([...cart, { ...item, quantity: 1 }]);
    }
  };

  const updateQuantity = (itemId, change) => {
    setCart(cart.map(item => {
      if (item.id === itemId) {
        const newQty = item.quantity + change;
        return newQty > 0 ? { ...item, quantity: newQty } : item;
      }
      return item;
    }).filter(item => item.quantity > 0));
  };

  const removeFromCart = (itemId) => {
    setCart(cart.filter(item => item.id !== itemId));
  };

  const calculateTotal = () => {
    return cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
  };

  const placeOrder = () => {
    if (cart.length === 0) {
      alert('Please add items to your cart first!');
      return;
    }

    alert(`Order placed successfully! Total: ৳${calculateTotal().toFixed(2)}\n\nThank you for your order!`);
    // Add this after setting orderSummary, before setView('order-success')

// Generate receipt data
const receiptData = {
    orderId: finalOrder.id,
    tableNumber: selectedTable.table_number,
    items: finalOrder.order_details.map(detail => ({
      name: detail.menu_items.name,
      quantity: detail.quantity,
      price: detail.price,
      subtotal: detail.subtotal
    })),
    total: finalOrder.total_amount,
    date: new Date(finalOrder.created_at).toLocaleString()
  };
  
  setGeneratedReceipt(receiptData);
    setView('order-success');

    
  };

  const startNewOrder = () => {
    setView('table-selection');
    setSelectedTable(null);
    setCart([]);
    loadTables(); // Refresh table status
  };

  // TABLE SELECTION VIEW
  if (view === 'table-selection') {
    return (
      <div className="min-h-screen bg-gradient-to-br from-amber-50 to-orange-50 p-4 md:p-6">
        <div className="max-w-6xl mx-auto">
          <div className="text-center mb-8">
            <Coffee className="w-16 h-16 mx-auto text-amber-600 mb-4" />
            <h1 className="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Welcome to Our Coffee Shop</h1>
            <p className="text-gray-600">Please select your table to begin ordering</p>
          </div>

          {loading ? (
            <div className="text-center py-12">
              <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-amber-600 mx-auto"></div>
              <p className="mt-4 text-gray-600">Loading tables...</p>
            </div>
          ) : (
            <>
              <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-4">
                {tables.map(table => (
                  <button
                    key={table.id}
                    onClick={() => selectTable(table)}
                    disabled={table.status !== 'free'}
                    className={`p-4 md:p-6 rounded-xl text-center transition-all transform hover:scale-105 ${
                      table.status === 'free'
                        ? 'bg-white hover:bg-amber-50 border-2 border-amber-200 hover:border-amber-400 cursor-pointer shadow-md hover:shadow-lg'
                        : 'bg-gray-100 border-2 border-gray-300 cursor-not-allowed opacity-70'
                    }`}
                  >
                    <div className="text-2xl md:text-3xl font-bold mb-1 md:mb-2">Table {table.table_number}</div>
                    <div className={`text-sm font-medium ${
                      table.status === 'free' ? 'text-green-600' : 'text-red-600'
                    }`}>
                      {table.status === 'free' ? 'Available' : 'Occupied'}
                    </div>
                    <div className="text-xs text-gray-500 mt-1">{table.capacity} seats</div>
                  </button>
                ))}
              </div>

              {/* Top Items Section */}
              <div className="mt-12 bg-gradient-to-r from-amber-50 to-orange-50 rounded-2xl shadow-lg p-6 border border-amber-200">
                <div className="flex items-center gap-3 mb-6">
                  <Coffee className="w-8 h-8 text-amber-600" />
                  <div>
                    <h3 className="text-2xl font-bold text-gray-800">Popular This Week</h3>
                    <p className="text-amber-700">Customer favorites</p>
                  </div>
                </div>
                <div className="space-y-3">
                  {[
                    { name: 'Cappuccino', price: '৳180', orders: '156' },
                    { name: 'Latte', price: '৳200', orders: '142' },
                    { name: 'Croissant', price: '৳150', orders: '128' }
                  ].map((item, index) => (
                    <div key={index} className="flex items-center justify-between p-3 bg-white/80 rounded-lg">
                      <div className="flex items-center gap-3">
                        <div className="w-8 h-8 flex items-center justify-center bg-amber-100 text-amber-800 rounded-full font-bold">
                          {index + 1}
                        </div>
                        <span className="font-medium">{item.name}</span>
                      </div>
                      <div className="text-right">
                        <div className="font-bold text-amber-600">{item.price}</div>
                        <div className="text-sm text-gray-500">{item.orders} orders</div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </>
          )}
        </div>
      </div>
    );
  }

  // MENU VIEW
  if (view === 'menu') {
    return (
      <div className="min-h-screen bg-gray-50 pb-32">
        {/* Header */}
        <div className="bg-white shadow-sm sticky top-0 z-10">
          <div className="max-w-7xl mx-auto px-4 py-4">
            <div className="flex items-center justify-between">
              <div>
                <h1 className="text-xl md:text-2xl font-bold text-gray-800">Table {selectedTable?.table_number}</h1>
                <p className="text-sm text-gray-600">Browse our menu and add items to your cart</p>
              </div>
              <button
                onClick={() => setView('table-selection')}
                className="px-3 md:px-4 py-2 text-gray-600 hover:text-gray-800 text-sm md:text-base"
              >
                Change Table
              </button>
            </div>
          </div>
        </div>

        {/* Menu Grid */}
        <div className="max-w-7xl mx-auto px-4 py-6">
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
            {menuItems.map(item => (
              <div key={item.id} className="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                <div className="p-4 md:p-6">
                  <h3 className="text-lg md:text-xl font-bold text-gray-800 mb-2">{item.name}</h3>
                  <p className="text-gray-600 text-sm mb-3 md:mb-4 line-clamp-2">{item.description}</p>
                  <div className="flex items-center justify-between">
                    <span className="text-xl md:text-2xl font-bold text-amber-600">৳{item.price}</span>
                    <button
                      onClick={() => addToCart(item)}
                      className="bg-amber-500 text-white px-3 md:px-4 py-2 rounded-lg hover:bg-amber-600 transition text-sm md:text-base"
                    >
                      Add to Cart
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        {/* Floating Cart */}
        {cart.length > 0 && (
          <div className="fixed bottom-0 left-0 right-0 bg-white border-t-2 border-amber-200 shadow-lg">
            <div className="max-w-7xl mx-auto px-4 py-3 md:py-4">
              <div className="flex items-center justify-between mb-3 md:mb-4">
                <h3 className="text-base md:text-lg font-bold text-gray-800 flex items-center gap-2">
                  <ShoppingCart className="w-4 h-4 md:w-5 md:h-5" />
                  Your Cart ({cart.length} items)
                </h3>
                <div className="text-xl md:text-2xl font-bold text-amber-600">
                  Total: ৳{calculateTotal().toFixed(2)}
                </div>
              </div>

              <div className="space-y-2 mb-3 md:mb-4 max-h-32 md:max-h-48 overflow-y-auto">
                {cart.map(item => (
                  <div key={item.id} className="flex items-center justify-between bg-gray-50 p-2 md:p-3 rounded-lg">
                    <div className="flex-1">
                      <div className="font-medium text-gray-800 text-sm md:text-base">{item.name}</div>
                      <div className="text-xs md:text-sm text-gray-600">৳{item.price} each</div>
                    </div>
                    <div className="flex items-center gap-2 md:gap-3">
                      <button
                        onClick={() => updateQuantity(item.id, -1)}
                        className="w-6 h-6 md:w-8 md:h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300"
                      >
                        <Minus className="w-3 h-3 md:w-4 md:h-4" />
                      </button>
                      <span className="w-6 md:w-8 text-center font-bold text-sm md:text-base">{item.quantity}</span>
                      <button
                        onClick={() => updateQuantity(item.id, 1)}
                        className="w-6 h-6 md:w-8 md:h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300"
                      >
                        <Plus className="w-3 h-3 md:w-4 md:h-4" />
                      </button>
                      <button
                        onClick={() => removeFromCart(item.id)}
                        className="w-6 h-6 md:w-8 md:h-8 bg-red-100 text-red-600 rounded-full flex items-center justify-center hover:bg-red-200 ml-1 md:ml-2"
                      >
                        <Trash2 className="w-3 h-3 md:w-4 md:h-4" />
                      </button>
                      <div className="w-16 md:w-20 text-right font-bold text-gray-800 text-sm md:text-base">
                        ৳{(item.price * item.quantity).toFixed(2)}
                      </div>
                    </div>
                  </div>
                ))}
              </div>

              <button
                onClick={placeOrder}
                className="w-full bg-amber-500 text-white py-3 md:py-4 rounded-lg font-bold text-base md:text-lg hover:bg-amber-600 transition"
              >
                Place Order - ৳{calculateTotal().toFixed(2)}
              </button>
            </div>
          </div>
        )}
      </div>
    );
  }

  // ORDER SUCCESS VIEW
  if (view === 'order-success') {
    return (
      <div className="min-h-screen bg-gradient-to-br from-green-50 to-emerald-50 flex items-center justify-center p-4 md:p-6">
        <div className="max-w-md w-full bg-white rounded-2xl shadow-xl p-6 md:p-8">
          <div className="text-center mb-6">
            <CheckCircle className="w-16 h-16 md:w-20 md:h-20 text-green-500 mx-auto mb-4" />
            <h1 className="text-2xl md:text-3xl font-bold text-gray-800 mb-2">Order Placed Successfully!</h1>
            <p className="text-gray-600">Thank you for your order</p>
          </div>

          <div className="border-t border-b border-gray-200 py-4 mb-6">
            <h3 className="font-bold text-gray-800 mb-3">Order Summary:</h3>
            <div className="space-y-2">
              {cart.map((item, idx) => (
                <div key={idx} className="flex justify-between text-gray-700">
                  <span>{item.name} × {item.quantity}</span>
                  <span className="font-medium">৳{(item.price * item.quantity).toFixed(2)}</span>
                </div>
              ))}
            </div>
            <div className="flex justify-between text-lg md:text-xl font-bold text-gray-800 mt-4 pt-4 border-t">
              <span>Total:</span>
              <span className="text-amber-600">৳{calculateTotal().toFixed(2)}</span>
            </div>
          </div>

          <div className="mb-6">
            <h3 className="font-bold text-gray-800 mb-3">Payment Information:</h3>
            <div className="grid grid-cols-3 gap-2 md:gap-3">
              <button className="p-3 border-2 border-gray-300 rounded-lg hover:border-amber-500 hover:bg-amber-50 transition">
                <div className="font-bold">Cash</div>
              </button>
              <button className="p-3 border-2 border-gray-300 rounded-lg hover:border-amber-500 hover:bg-amber-50 transition">
                <div className="font-bold">Card</div>
              </button>
              <button className="p-3 border-2 border-gray-300 rounded-lg hover:border-amber-500 hover:bg-amber-50 transition">
                <div className="font-bold">Mobile</div>
              </button>
            </div>
          </div>

          <div className="flex gap-2 md:gap-3">
            <button
              onClick={() => {
                setView('menu');
                setCart([]);
              }}
              className="flex-1 bg-amber-100 text-amber-700 py-3 rounded-lg font-bold hover:bg-amber-200 transition"
            >
              Add More Items
            </button>
            <button
              onClick={startNewOrder}
              className="flex-1 bg-gray-200 text-gray-700 py-3 rounded-lg font-bold hover:bg-gray-300 transition"
            >
              New Order
            </button>
          </div>
        </div>
      </div>
    );
    {generatedReceipt && (
        <div className="mb-6 p-4 bg-blue-50 rounded-lg">
          <div className="flex items-center justify-between">
            <div>
              <h3 className="font-bold text-blue-800">Download Receipt</h3>
              <p className="text-sm text-blue-600">Get a PDF copy of your order</p>
            </div>
            <ReceiptGenerator 
              orderData={generatedReceipt} 
              onDownload={() => alert('Receipt downloaded successfully!')}
            />
          </div>
        </div>
      )}
  }

  // Add this in the order-success view, after the order summary section
{generatedReceipt && (
    <div className="mb-6 p-4 bg-blue-50 rounded-lg">
      <div className="flex items-center justify-between">
        <div>
          <h3 className="font-bold text-blue-800">Download Receipt</h3>
          <p className="text-sm text-blue-600">Get a PDF copy of your order</p>
        </div>
        <ReceiptGenerator 
          orderData={generatedReceipt} 
          onDownload={() => alert('Receipt downloaded successfully!')}
        />
      </div>
    </div>
  )}

  return null;
}

